@model Egen.Models.Banks

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<br />
<div class="card">
    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Edit Bank Details</strong>
    </h5>
    <div class="card-body px-lg-5 pt-0">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BankId)
            @*<div class="form-group">
                <label>Consultant Name</label>
                @Html.DropDownList("ConsultantId", null, "--Select--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConsultantId, "", new { @class = "text-danger" })

            </div>*@
            <div class="md-form">
                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                <label>Account Name</label>
                @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">

                @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control" } })
                <label>Account Number</label>
                @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })

            </div>

            <div class="md-form">
                <label>IBAN</label>
                @Html.EditorFor(model => model.Iban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Iban, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">

                @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control" } })
                <label>Bank Name</label>
                @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">


                @Html.EditorFor(model => model.BankCountry, new { htmlAttributes = new { @class = "form-control" } })
                <label>Bank Country</label>
                @Html.ValidationMessageFor(model => model.BankCountry, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.EditorFor(model => model.BankBranch, new { htmlAttributes = new { @class = "form-control" } })
                <label>Bank Branch</label>
                @Html.ValidationMessageFor(model => model.BankBranch, "", new { @class = "text-danger" })
            </div>
            <div class="md-form">
                @Html.EditorFor(model => model.SwiftCode, new { htmlAttributes = new { @class = "form-control" } })
                <label>Swift Code</label>
                @Html.ValidationMessageFor(model => model.SwiftCode, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Routing Type</label>

                @Html.DropDownListFor(m => m.RoutingType, new[]
                {
                    new SelectListItem(){Text ="Sort Code" ,Value = "Sort Code"},
                    new SelectListItem(){Text ="BSB Code" ,Value = "BSB Code"},
                    new SelectListItem(){Text ="IFSC Code" ,Value = "IFSC Code"},
                    new SelectListItem(){Text ="Fedwire Number" ,Value = "Fedwire Number"},
                }, "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoutingType, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.EditorFor(model => model.RoutingNumber, new { htmlAttributes = new { @class = "form-control" } })
                <label>Routing Number</label>
                @Html.ValidationMessageFor(model => model.RoutingNumber, "", new { @class = "text-danger" })
            </div>
            <button class="btn btn-success btn-block z-depth-0 my-4 waves-effect rounded" type="submit">Submit</button>


        }
    </div>
</div>
<br />
<div>
    <a href="@Url.Action("Index")" class="btn btn-lg btn-primary float-none btn-unique btn-block waves-effect rounded">List</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
