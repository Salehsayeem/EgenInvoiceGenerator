@model Egen.Models.Companies

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <div class="card-title">
            <h2 class="text-center">Create Company</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Company Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Company Address</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Attention</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Attention, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Attention, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-lg btn-outline-success float-none"  />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
<br />
<div>
    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary float-none">List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
