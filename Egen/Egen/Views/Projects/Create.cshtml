@model Egen.Models.Projects

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-title">
            <h2 class="text-center">Create Project</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Project Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Project Code</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProjectCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ProjectCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-sm btn-outline-success float-none" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

<br />
<div>
    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary float-none">List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
