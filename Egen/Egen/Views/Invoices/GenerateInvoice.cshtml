@model Egen.Models.Invoices
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
    <meta name="viewport" content="width=device-width" />
    <title>GenerateInvoice</title>
    <link href="~/Content/Invoice/css/print.css" rel="stylesheet" />
    <link href="~/Content/Invoice/css/style.css" rel="stylesheet" />
    <script src="~/Content/Invoice/js/jquery-1.3.2.min.js"></script>
    <script src="~/Content/Invoice/js/example.js"></script>
</head>
<body>
    <div id="page-wrap">

        <textarea id="header">Project Name : @Html.DisplayFor(model => model.Project.ProjectName) 
@Html.DisplayFor(model => model.Project.ProjectCode) 
</textarea>
        <P>To</P>
        <div id="identity">
            <textarea id="address">
@Html.DisplayFor(model => model.Company.CompanyName)
@Html.DisplayFor(model => model.Company.Attention)
@Html.DisplayFor(model => model.Company.CompanyAddress)
</textarea>

            <div class="from">
                <p>From</p>
                <address>
                    <br />
                    <h4>@Html.DisplayFor(model => model.Consultant.ConsultantName)</h4>
                    @Html.DisplayFor(model => model.Consultant.ConsultantDesignation) <br>
                </address>
                @*<p>Phone: (555) 555-5555</p>*@
            </div>


        </div>

        <div style="clear:both"></div>

        <div id="customer">
            <table id="meta">
                <tr>
                    <td class="meta-head">Invoice # </td>
                    <td><textarea>@Html.DisplayFor(model => model.InvoiceNo)</textarea></td>
                </tr>
                <tr>

                    <td class="meta-head">Date</td>
                    <td><textarea id="date">@Html.DisplayFor(model => model.Date)</textarea></td>
                </tr>
                <tr>
                    <td class="meta-head">Amount Due</td>
                    <td>
                        <div class="due">@Html.DisplayFor(model => model.Due) </div>
                    </td>
                </tr>
            </table>

        </div>

        <table id="items">

            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Daily Rate(BDT)</th>
                <th>NO. Work Days</th>
                <th>Tota(BDT)</th>
            </tr>

            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.Remuneration)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.RemunerationDetails)                   </textarea></td>
                <td><textarea class="cost"> @Html.DisplayFor(model => model.RemunerationDailyRate)                    </textarea></td>
                <td><textarea class="qty">  @Html.DisplayFor(model => model.RemunerationWorkingDays)                      </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.RemunerationTotal) </span></td>
            </tr>
            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.PerDiem)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.PerDiemDetails)                   </textarea></td>
                <td><textarea class="cost"> @Html.DisplayFor(model => model.PerDiemDailyRate)                    </textarea></td>
                <td><textarea class="qty">  @Html.DisplayFor(model => model.PerDiemWorkingDays)                      </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.PerDiemTotal) </span></td>
            </tr>

            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.AirFare)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.AirFareDetails)                   </textarea></td>
                <td><textarea class="cost">                  </textarea></td>
                <td><textarea class="qty">                     </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.AirFareTotal) </span></td>
            </tr>

            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.Accommodation)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.AccommodationDetails)                   </textarea></td>
                <td><textarea class="cost">                  </textarea></td>
                <td><textarea class="qty">                     </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.AccommodationTotal) </span></td>
            </tr>
            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.VisaFees)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.VisaFeesDetails)                   </textarea></td>
                <td><textarea class="cost">                  </textarea></td>
                <td><textarea class="qty">                     </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.VisaFeesTotal) </span></td>
            </tr>
            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.TaxiFare)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.TaxiFareDetails)                   </textarea></td>
                <td><textarea class="cost">                  </textarea></td>
                <td><textarea class="qty">                     </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.TaxiFareTotal) </span></td>
            </tr>
            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <textarea> @Html.DisplayFor(model => model.Other)      </textarea>@*<a class="delete" href="javascript:;"
                            title="Remove row">X</a>*@
                    </div>
                </td>
                <td class="description"><textarea> @Html.DisplayFor(model => model.OtherDetails)                   </textarea></td>
                <td><textarea class="cost"> @Html.DisplayFor(model => model.OtherDailyRate)                    </textarea></td>
                <td><textarea class="qty">  @Html.DisplayFor(model => model.OtherWorkingDays)                      </textarea></td>
                <td><span class="price"> @Html.DisplayFor(model => model.OtherTotal) </span></td>
            </tr>
            @*<tr id="hiderow">
                    <td colspan="5"><a id="addrow" href="javascript:;" title="Add a row">Add a row</a></td>
                </tr>

                <tr>
                        <td colspan="2" class="blank"> </td>
                        <td colspan="2" class="total-line">Subtotal</td>
                        <td class="total-value">
                            <div id="subtotal"> </div>
                        </td>
                    </tr>*@
            <tr>

                <td colspan="2" class="blank"> </td>
                <td colspan="2" class="total-line">Total</td>
                <td class="total-value">
                    <div id="total">@Html.DisplayFor(model => model.Total) </div>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="blank"> </td>
                <td colspan="2" class="total-line">Less: Payment/Advances</td>

                <td class="total-value"><textarea id="paid">@Html.DisplayFor(model => model.Advance)</textarea></td>
            </tr>
            <tr>
                <td colspan="2" class="blank"> </td>
                <td colspan="2" class="total-line balance">Total Balance Due</td>
                <td class="total-value balance">
                    <div class="due"> @Html.DisplayFor(model => model.Due)</div>
                </td>
            </tr>

        </table>

    <div id="terms">
        <h3> Please make payments to the following bank account :</h3><br>
        <h5>
            Account Name: @Html.DisplayFor(model => model.Bank.AccountName)
        </h5> <br>
        <h5>
            Account Number: @Html.DisplayFor(model => model.Bank.AccountNumber)
        </h5> <br>
        <h5>
            IBAN: @Html.DisplayFor(model => model.Bank.Iban)
        </h5><br>
        <h5>
            Bank Name: @Html.DisplayFor(model => model.Bank.BankName)
        </h5><br>
        <h5>
            Swift Code: @Html.DisplayFor(model => model.Bank.SwiftCode)
        </h5><br>
        <h5>
            Routing Type: @Html.DisplayFor(model => model.Bank.RoutingType)
        </h5><br>
        <h5>
            Routing Number: @Html.DisplayFor(model => model.Bank.RoutingNumber)
        </h5><br>
        <h5>
            Bank Country: @Html.DisplayFor(model => model.Bank.BankCountry)
        </h5><br>

        <h5>
            Bank Branch: @Html.DisplayFor(model => model.Bank.BankBranch)
        </h5>
    </div>
    <br/>
    <p>Certified Correct by: <strong>@Html.DisplayFor(model => model.Consultant.ConsultantName)</strong></p>
    </div>




    <!---->
    @*@Html.DisplayFor(model => model.IsUsd)*@




</body>
</html>
