@model Egen.Models.Consultants

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<br />
<div class="card">
    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Create Consultant</strong>
    </h5>
    <div class="card-body px-lg-5 pt-0">
        @using (Html.BeginForm())
        {
            <br />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Project</label>
                @Html.DropDownList("ProjectId", null, "--Select--", htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
            <div class="md-form">
                @Html.EditorFor(model => model.ConsultantName, new { htmlAttributes = new { @class = "form-control", @required = "required", @id = "validationCustom022" } })
                <label>Consultant Name</label>
                @Html.ValidationMessageFor(model => model.ConsultantName, "", new { @class = "text-danger" })

            </div>

            <div class="md-form">
                @Html.EditorFor(model => model.ConsultantDesignation, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                <label>Consultant Designation</label>
                
                @Html.ValidationMessageFor(model => model.ConsultantDesignation, "", new { @class = "text-danger" })
            </div>
            <button class="btn btn-success btn-block z-depth-0 my-4 waves-effect rounded" type="submit">Submit</button>


        }
    </div>
</div>
<br />
<div>
    <a href="@Url.Action("Index")" class="btn btn-lg btn-primary float-none btn-unique btn-block waves-effect rounded">List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
